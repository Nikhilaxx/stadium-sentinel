{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "src",                       // ðŸ‘ˆ CHANGE this from "." to "src"
    "paths": {
      "@/*": ["*"],                         // Now @/components resolves to src/components
      "@components/*": ["Police/components/*"],
      "@types/*": ["Police/types/*"],
      "@hooks/*": ["Police/hooks/*"],
      "@lib/*": ["Police/lib/*"],
      "@utils/*": ["Police/utils/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
